<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cdc9c9"

    >

    <ImageView
        android:id="@+id/img_done"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginBottom="85dp"
        android:layout_toEndOf="@+id/textView3"
        android:src="@drawable/ic_done_white_48dp" />

    <EditText
        android:id="@+id/studyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="indicative study time"
        android:inputType="number"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="153dp"
        app:srcCompat="@drawable/ic_brightness_3_black_48dp" />

    <TextView
        android:id="@+id/txt_day_of_week"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="Days"
        android:textAlignment="center"
        android:textColor="#00AAFF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_day_of_week"
        android:layout_alignBottom="@+id/txt_day_of_week"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/txt_day_of_week"
        android:text="" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="73dp"
        app:srcCompat="@drawable/ic_today_black_48dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_event_available_black_48dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView8"
        android:layout_marginLeft="48dp"
        android:layout_toRightOf="@+id/imageView7"
        android:text="How often ?" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_alarm_time"
        android:layout_alignBottom="@+id/txt_alarm_time"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/txt_alarm_time"
        android:text="Notification Time " />

    <TextView
        android:id="@+id/txt_alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_marginLeft="48dp"
        android:layout_toRightOf="@+id/imageView9"
        android:text="0:00"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8"
        android:layout_marginStart="1dp"
        android:layout_marginTop="85dp"
        app:srcCompat="@drawable/ic_notifications_black_48dp" />

    <TextView
        android:id="@+id/txt_insert_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginRight="30dp"
        android:text="January 18 (Wed) - February 18 (Sat)"
        android:textColor="#00AAFF" />

    <EditText
        android:id="@+id/edit_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView7"
        android:layout_alignStart="@+id/textView3"
        android:ems="10"
        android:hint="Plan or Module name"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swi_alarm"
        android:layout_alignTop="@+id/imageView9"
        android:layout_toEndOf="@+id/edit_plan"
        android:checked="true" />

    <TextView
        android:text="00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_insert_date"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginStart="13dp"
        android:id="@+id/txt_date_total" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView9"
        android:layout_alignEnd="@+id/txt_insert_date"
        android:text="Days" />


</RelativeLayout>