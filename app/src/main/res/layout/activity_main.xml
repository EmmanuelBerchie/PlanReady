<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.berchie.planready.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/tbr_main"
        app:title="PlanReady"
        app:titleTextColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center" />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/img_reorder"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_reorder_white_48dp"
            android:layout_gravity="end"/>
    </android.support.v7.widget.Toolbar>

    <com.example.berchie.planready.cls_view_pager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:background="#EEEEEE">
    </com.example.berchie.planready.cls_view_pager>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/ic_home_black_48dp"
            android:id="@+id/img_home"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_height="48dp" />

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/ic_today_black_48dp"
            android:id="@+id/img_calendar"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_height="48dp"
            android:alpha="0.5" />

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/ic_add_circle_outline_black_48dp"
            android:id="@+id/img_insert"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_height="48dp"
            android:alpha="0.5" />

           </LinearLayout>

</LinearLayout>
